{
  "name": "actron-air-esphome-card",
  "version": "0.1.0",
  "description": "Custom Lovelace card for Actron Air ESPHome Keypad",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "lovelace",
    "custom-cards",
    "actronair",
    "esphome"
  ],
  "main": "dist/actron-air-esphome-card.js",
  "module": "dist/actron-air-esphome-card.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnf/esphome_actron_air_keypad.git"
  },
  "author": "John Googin",
  "license": "MIT",
  "scripts": {
    "start": "rollup -c rollup.config.dev.js --watch",
    "build": "pnpm run lint && rollup -c",
    "deploy": "pnpm run build && scp dist/actron-air-esphome-card.js root@homeassistant.local:config/www/actron-air-esphome-card.js",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "home-assistant-js-websocket": "^9.4.0",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "rollup": "^4.0.0",
    "rollup-plugin-serve": "^2.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0"
  }
}
