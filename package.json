{
  "name": "actron-air-esphome-card",
  "version": "0.1.0",
  "description": "Custom Lovelace card for Actron Air ESPHome Keypad",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "lovelace",
    "custom-cards",
    "actronair",
    "esphome"
  ],
  "main": "dist/actron-air-esphome-card.js",
  "module": "dist/actron-air-esphome-card.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnf/actron-air-esphome.git"
  },
  "author": "John Googin",
  "license": "MIT",
  "scripts": {
    "copy-card": "mkdir -p custom_components/actron_air_esphome/frontend/; mv dist/actron-air-esphome-card.js custom_components/actron_air_esphome/frontend/; rmdir dist",
    "build": "pnpm run lint && rollup -c && pnpm run copy-card",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "release": "gh workflow run release.yml"
  },
